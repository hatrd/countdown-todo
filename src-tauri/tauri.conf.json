{
  "$schema": "https://schema.tauri.app/config/1",
  "package": {
    "productName": "Countdown",
    "version": "0.1.0"
  },
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": "../app",
    "distDir": "../app",
    "withGlobalTauri": true
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "bundle": {
      "active": true,
      "identifier": "com.countdown.todo",
      "targets": ["nsis"],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/icon.ico",
        "icons/icon.icns"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Countdown",
        "width": 1320,
        "height": 860,
        "resizable": true,
        "fullscreen": false
      }
    ]
  }
}
